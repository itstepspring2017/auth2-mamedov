<link rel="stylesheet" href="media/css/registration.css">

    <form action="registration" method="post" class="registration">
        <label for="login">Login</label>
        <input type="text" name="login" id="login" value="{{ old.login?old.login:'' }}">
        <label for="pass">Password</label>
        <input type="password" name="pass" id="pass">
        <label for="pass2">Confirm Password</label>
        <input type="password" name="pass2" id="pass2">
        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="{{ old.email?old.email:'' }}">
        <input type="submit">
    </form>
    {% if error %}
        <div class="error">{{ error }}</div>
    {% endif %}
